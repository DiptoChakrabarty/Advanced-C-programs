#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#include<stdbool.h>
#define armax 5
#define armax2 10

int main()
{
	int arr[armax],arr2[armax2],i,imax, a, b, min = -1,l=0,g=0;;
	while (true)
	{
		printf("Select Operation For Stack:\n1)PUSH\n2)POP\n3)DISPLAY\n4)MAX Element\n5)Display Max Element Stack\n6)EXIT\n\n");
		printf("Enter Your Choice From 1 To 6: ");
		scanf("%d",&a);
		printf("\n");
		if (a <= 0 || a >= 7)
			printf("\a[---<> Invalid Option Re-Select Choice <>---]\n\n");
		else if (a == 1)
		{
			if (min == armax - 1)
				printf("\a[---<> STACK OVERFLOW ERROR <>---]\n\n");
			else
			{
				min++;
				printf("Enter The INTEGER Element To Push: ");
				scanf("%d",&b); printf("\n\n");
				arr[min] = b;
			}
		}
		else if (a == 2)
		{
			if (min <= -1)
			{
				printf("\a[---<> STACK UNDERFLOW ERROR <>--]\n\n");
				min = -1;
			}
			else 
			{
				printf("[---<> Last Element Popped Out Successfully <>---]\n\n");
				min--;
			}
		}
		else if (a == 3)
			if (min == -1)
				printf("[---<> No Element Is Present In The Stack <>---]\n\n");
			else
			{
				for (i = 0; i <= min; i++)
				{
					printf("\nElement ");  printf(" Of Stack is => ");
					printf("%d\n",arr[i]); printf("\n\n");
				}
			}
		else if (a == 4)
		{
			if (min==-1)
				printf("\n\n Stack Is Empty \n\n");
			else
			{
			for(i=0;i<=min;i++)
				{
					if (arr[i]>=imax)
					{
						imax=arr[i];
					}
				}
			arr2[l]=imax;
			g++;
			imax=0;
			printf("\n\n");
			printf("Greatest Element Is => %d",arr2[l]);
			printf("\n\n");
			l++;
			}
		}
		else if (a == 5)
			for(i=0;i<=g-1;i++)
			{
			printf("\n %d \n",arr2[i]);
			printf("\n");
			}
		else if (a == 6)
			return false;
		if (min < -1)
			min = -1;
	}
	return 0;
}